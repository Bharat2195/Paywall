<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtHeaderTitle"
        android:text="Select Operator"
        android:textSize="24sp"
        android:textStyle="bold"
        android:elevation="5dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <View
        android:id="@+id/viewTitle"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/txtHeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <ListView
        android:id="@+id/mListviewOperator"
        android:layout_below="@+id/viewTitle"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_above="@+id/mRelativeLayoutCancle"
        android:layout_height="match_parent">

    </ListView>

    <RelativeLayout
        android:id="@+id/mRelativeLayoutCancle"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="?attr/actionBarSize">
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_height="1dp">

        </View>

        <TextView
            android:id="@+id/txtCancle"
            android:text="CANCEL"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FB8C00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>