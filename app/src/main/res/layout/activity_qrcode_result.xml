<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_qrcode_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tornado.cphp.awhitepaid.vendorpanel.QRCodeResultActivity">

    <include
        android:id="@+id/toolbar_code_result"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        layout="@layout/toolbar"></include>


    <ScrollView
        android:layout_below="@+id/toolbar_code_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/toolbar_code_result"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">


            <Button
                android:id ="@+id/btnName"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textStyle="bold"
                android:text=""
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_bg_round"
                />


            <TextView
                android:id="@+id/txtName"
                android:text=""
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <TextView
                android:layout_width="wrap_content"
                android:text="@string/Rs"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:textSize="16sp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_margin="30dp"
                android:textAlignment="center"
                android:inputType="number"
                android:singleLine="true"
                android:backgroundTint="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
                android:layout_height="wrap_content" />



            <!--<EditText-->
                <!--android:id="@+id/etReason"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_margin="30dp"-->
                <!--android:textColor="@color/cardview_dark_background"-->
                <!--android:hint="What is it for? (Optional)"-->
                <!--android:textAlignment="center"-->
                <!--android:singleLine="true"-->
                <!--android:textColorHint="@android:color/darker_gray"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:backgroundTint="@android:color/darker_gray"-->
                <!--android:layout_height="wrap_content" />-->

            <Button
                android:id="@+id/btnProcessToPay"
                android:layout_width="match_parent"
                android:text="Proceed to Pay"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:background="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </ScrollView>





</RelativeLayout>
