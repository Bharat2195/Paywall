<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vendor_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tornado.cphp.awhitepaid.VendorChangePasswordActivity">


    <include
        android:id="@+id/toolbar_change_password"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </include>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar_change_password"
        android:layout_height="match_parent">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:elevation="5dp"
            app:cardCornerRadius="5dp">


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/viewLine"
                android:layout_margin="10dp"
                android:padding="10dp">


                <TextView
                    android:id="@+id/txtOldPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_below="@+id/txtTitle"
                    android:layout_marginTop="10dp"
                    android:text="Old Password:"
                    android:textSize="@dimen/view_profile_text_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etChangeOldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/txtOldPassword"
                    android:layout_marginTop="10dp"
                    android:inputType="textPassword"
                    android:background="@drawable/edittext_corner"
                    android:hint=""
                    android:padding="10dp"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/txtErrorMsgOldPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etChangeOldPassword"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:textColor="@color/red"
                    android:text="Password Invalid"
                    android:textSize="@dimen/view_profile_text_size"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txtNewPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtErrorMsgOldPassword"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:text="New Password:"
                    android:textSize="@dimen/view_profile_text_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etChangeNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/txtNewPassword"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_corner"
                    android:hint=""
                    android:padding="10dp"
                    android:inputType="textPassword"
                    android:singleLine="true" />


                <TextView
                    android:id="@+id/txtConfirmPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_below="@+id/etChangeNewPassword"
                    android:layout_marginTop="10dp"
                    android:text="ConfirmPassword:"
                    android:textSize="@dimen/view_profile_text_size"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etChangeConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/txtConfirmPassword"
                    android:inputType="textPassword"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_corner"
                    android:hint=""
                    android:padding="10dp"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/txtErrorMsgConfirmPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etChangeConfirmPassword"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:textColor="@color/red"
                    android:text="CONFIRM PASSWORD IS NOT MATCH"
                    android:textSize="@dimen/view_profile_text_size"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/btnChangeUpadateNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtErrorMsgConfirmPassword"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/corner_edittext"
                    android:padding="10dp"
                    android:text="Update Now"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </ScrollView>


</RelativeLayout>
