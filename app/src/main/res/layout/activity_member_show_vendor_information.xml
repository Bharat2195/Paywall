<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/mToolbarVendroShowInformation"
        android:layout_width="match_parent"
        layout="@layout/toolbar"
        android:layout_height="?attr/actionBarSize">

    </include>


    <android.support.v7.widget.CardView
        android:id="@+id/mCard_view"
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:elevation="5dp"
        android:layout_below="@+id/mToolbarVendroShowInformation"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/mListviewVendroShowInformation"
            android:background="#00818d"
            android:divider="#00818d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>


    </android.support.v7.widget.CardView>




</RelativeLayout>