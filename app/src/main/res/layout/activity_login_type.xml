<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paywall_dashboard"
    tools:context="com.tornado.cphp.paywall.LoginTypeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="125dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btnVendorLogin"
            android:text="Vendor Login"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnMemberLogin"
            android:text="Member Login"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:layout_below="@+id/btnVendorLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</RelativeLayout>
